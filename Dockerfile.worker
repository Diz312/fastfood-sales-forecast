FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

RUN pip install uv

COPY pyproject.toml .
COPY src/ ./src/

RUN uv pip install --system -e "."

CMD ["celery", "-A", "src.workers.celery_app", "worker", "-l", "info", "-Q", "forecast,default", "-c", "2"]
